<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Add a New Order</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  @using OrderTracker.Models;
  <h1>Add a New Order to Vendor - @Model.Name:</h1>
  <form action="/vendors/@Model.Id/orders" method="post">
    <label for="orderTitle">Order Title:</label>
    <input id="orderTitle" name="orderTitle" type="text" required>
    <br>
    <label for="orderDescription">Order Description:</label>
    <input id="orderDescription" name="orderDescription" type="text" required>
    <br>
    <label for="orderPrice">Order Price:</label>
    <input id="orderPrice" name="orderPrice" type="number" required>
    <br>
    <label for="orderDate">Order Date:</label>
    <input id="orderDate" name="orderDate" type="text" required>
    <br>
    <button type="submit">Add Order</button>
  </form>

  <p><a href="/vendors">Back to Vendors List</a></p>
  <br>
  <p><a href='/'>Back to home page</a></p>
</body>

</html>