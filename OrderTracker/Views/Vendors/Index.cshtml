@{
  Layout = "_Layout";
}

@using OrderTracker.Models;
<h1>List of Vendors</h1>
<p>The current list of vendors in the system are displayed below</p>
<br>
@if(@Model.Count == 0)
{
  <div class="card border-dark mb-3" style="max-width: 20rem;">
    <div class="card-header">Message</div>
    <div class="card-body">
      <h4 class="card-title">Vendors not found</h4>
      <p class="card-text">There are currently no vendors in the list.</p>
    </div>
  </div> 
}
@foreach (Vendor entry in Model)
{
  <div class="card border-dark mb-3" style="max-width: 20rem;">
    <div class="card-header">Vendor @entry.Id</div>
    <div class="card-body">
      <h4 class="card-title">@entry.Name</h4>
      <p class="card-text"><a href="/vendors/@entry.Id">Display Orders</a></p>
    </div>
  </div>
}
<br>
<p><a href="/vendors/new">Add a new vendor</a></p>
