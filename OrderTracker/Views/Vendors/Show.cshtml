<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Vendor Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

@* Remove afterwards *@
<body style="background-color: rgb(185, 185, 211)">
  @using OrderTracker.Models;
  <h1>List of Orders from this Vendor:</h1>
  <h5>@Model["vendor"].Name</h5>
  @if(@Model["orders"].Count == 0)
  {
    <p>There are no orders yet from this vendor.</p>
  }
  <ul>
    @foreach(Order entry in @Model["orders"])
    {
      <li>@entry.Title <a href='/vendors/@Model["vendors"].Id/orders/@entry.Id'>View Details</a></li>
    }
  </ul>
  <p><a href='/vendors/@Model["vendors"].Id/orders/new'>Add an Order</a></p>
  <p><a href="/vendors">Back to Vendors List</a></p>
  <br>
  <p><a href='/'>Back to home page</a></p>
</body>

</html>